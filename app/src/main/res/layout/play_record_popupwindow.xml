<RelativeLayout
  android:layout_width="match_parent"
  android:layout_height="320dp"
  android:background="@color/popupwindow"
  android:layout_gravity="bottom"
  xmlns:android="http://schemas.android.com/apk/res/android"
  >
    <Button
      android:id="@+id/record_play"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:layout_marginBottom="50dp"
      android:background="@drawable/bg_button_circle_style3"
      android:text="长按说话"
      android:textColor="@color/text_color_selector1"
      style="@style/text_style8"
      />
  <Button
    android:id="@+id/uploading"
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:layout_marginBottom="10dp"
    android:textSize="15sp"
    android:layout_marginRight="20dp"
    android:layout_alignParentRight="true"
    android:textColor="@color/text_color_selector1"
    android:layout_alignParentBottom="true"
    android:visibility="invisible"
    android:background="@drawable/bg_button_circle_style1"
    android:text="上传"
    />
  <Button
    android:id="@+id/delete"
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:layout_marginBottom="10dp"
    android:textSize="15sp"
    android:layout_marginLeft="20dp"
    android:textColor="@color/red"
    android:layout_alignParentBottom="true"
    android:visibility="invisible"
    android:background="@drawable/bg_button_circle_style1"
    android:text="删除"
    />
  <SeekBar
    android:layout_marginTop="120dp"
    android:id="@+id/seekbar"
    style="?android:attr/progressBarStyleHorizontal"
    android:layout_width="match_parent"
    android:scrollbarStyle="outsideOverlay"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:thumbOffset="0px"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:progressDrawable="@drawable/seekbar_style"
    android:layout_height="wrap_content"
    android:thumb="@drawable/thumb_style"
    android:visibility="invisible"
    />
    <SurfaceView
      android:id="@+id/oscillograph"
      android:background="@color/popupwindow"
      android:layout_width="match_parent"
      android:layout_marginLeft="30dp"
      android:layout_marginRight="30dp"
      android:layout_height="100dp"
      android:layout_above="@id/record_play"
      android:layout_below="@id/nickname"
      android:layout_marginBottom="15dp"
      android:layout_marginTop="10dp"
      />
    <TextView
      android:id="@+id/date"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_above="@id/oscillograph"
      android:layout_centerHorizontal="true"
      android:layout_gravity="center_horizontal"
      android:text="00:00"
      android:textColor="@color/white"
      android:textSize="25sp"
      />
  </RelativeLayout>
