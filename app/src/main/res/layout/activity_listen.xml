<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  >
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    >
    <ImageView
      android:id="@+id/listen_back"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/ic_navigate_black_24dp"
      android:layout_centerVertical="true"
      />
  </RelativeLayout>
  <ImageView
    android:id="@+id/listen_image"
    android:background="@drawable/iconx"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="10dp"
    android:layout_width="200dp"
    android:layout_height="150dp"
    />
  <TextView
    android:id="@+id/nickname"
    android:textSize="25sp"
    android:textColor="@color/black"
    android:layout_marginTop="15dp"
    android:layout_gravity="center_horizontal"
    android:text="beyondboy"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />
  <TextView
    android:id="@+id/record_date"
    android:textSize="20sp"
    android:textColor="@color/black"
    android:text="date"
    android:layout_gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />
  <TextView
    android:id="@+id/current_date"
    android:textSize="20sp"
    android:textColor="@color/black"
    android:layout_marginTop="15dp"
    android:text="date"
    android:layout_gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    >
    <SeekBar
      android:layout_marginTop="20dp"
      android:id="@+id/seekbar"
      android:layout_width="match_parent"
      android:layout_marginLeft="30dp"
      android:layout_marginRight="30dp"
      android:progressDrawable="@drawable/seekbar_bg"
      android:layout_height="wrap_content"
      />
    <TextView
      android:id="@+id/total_date"
      android:layout_below="@id/seekbar"
      android:layout_alignParentRight="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="20sp"
      android:layout_marginRight="30dp"
      android:text="05:88"
      android:layout_gravity="right"
      />
    <Button
      android:id="@+id/play"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_alignParentBottom="true"
      android:textSize="25sp"
      android:layout_marginBottom="70dp"
      android:textColor="@drawable/textcolorselector"
      android:background="@drawable/bg_play_circle"
      android:text="播放录音"
      />
    <Button
      android:id="@+id/share"
      android:layout_width="90dp"
      android:layout_height="90dp"
      android:textSize="25sp"
      android:layout_marginRight="20dp"
      android:layout_alignParentRight="true"
      android:textColor="@drawable/textcolorselector"
      android:layout_alignParentBottom="true"
      android:layout_marginBottom="50dp"
      android:background="@drawable/bg_special_disease_circle"
      android:text="分享"
      />
    <Button
      android:id="@+id/save"
      android:layout_width="90dp"
      android:layout_height="90dp"
      android:textSize="25sp"
      android:layout_marginLeft="20dp"
      android:textColor="@drawable/textcolorselector"
      android:layout_alignParentBottom="true"
      android:layout_marginBottom="50dp"
      android:background="@drawable/bg_special_disease_circle"
      android:text="保存"
      />
  </RelativeLayout>
</LinearLayout>