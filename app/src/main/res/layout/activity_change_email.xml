<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:tools="http://schemas.android.com/tools"
  android:alpha="0.6"
  android:background="@color/grey"
  android:orientation="vertical"
  >
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <TextView
      android:id="@+id/textView"
      android:text="@string/modify_email"
      style="@style/text_style4"
      />
    <ImageView
      android:id="@+id/change_back"
      android:src="@drawable/ic_navigate_black_24dp"
      style="@style/image_style1"
      android:contentDescription="@null"
      />
    <include layout="@layout/save_button"/>
  </RelativeLayout>
  <com.scau.beyondboy.idgoods.view.ClearEditText
    android:id="@+id/email"
    android:inputType="textEmailAddress"
    tools:text="123456789@qq.com"
    style="@style/textv_style5"
    />
</LinearLayout>
