<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  >
  <ImageView
    android:id="@+id/blessing_image"
    android:background="@drawable/iconx"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="10dp"
    android:layout_width="200dp"
    android:layout_height="150dp"
    />
  <TextView
    android:id="@+id/nickname"
    android:textSize="25sp"
    android:textColor="@color/black"
    android:layout_marginTop="15dp"
    android:layout_gravity="center_horizontal"
    android:text="beyondboy"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />
  <TextView
    android:id="@+id/current_date"
    android:textSize="25sp"
    android:textColor="@color/black"
    android:visibility="invisible"
    android:layout_marginTop="15dp"
    android:layout_gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />
  <SeekBar
    android:layout_marginTop="40dp"
    android:id="@+id/seekbar"
    android:layout_width="match_parent"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:progressDrawable="@drawable/seekbar_bg"
    android:layout_height="wrap_content"
    />
  <TextView
    android:id="@+id/total_date"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="20sp"
    android:layout_marginRight="30dp"
    android:text="05:88"
    android:layout_gravity="right"
    />
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:background="@android:color/transparent"
    >
    <Button
      android:id="@+id/play"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:textSize="25sp"
      android:textColor="@drawable/textcolorselector"
      android:background="@drawable/bg_play_circle"
      android:text="回放录音"
      />
    <Button
      android:id="@+id/uploading"
      android:layout_width="90dp"
      android:layout_height="90dp"
      android:textSize="25sp"
      android:layout_marginRight="20dp"
      android:layout_alignParentRight="true"
      android:textColor="@drawable/textcolorselector"
      android:layout_alignParentBottom="true"
      android:layout_marginBottom="50dp"
      android:background="@drawable/bg_special_disease_circle"
      android:text="上传"
      />
    <Button
      android:id="@+id/delete"
      android:layout_width="90dp"
      android:layout_height="90dp"
      android:textSize="25sp"
      android:layout_marginLeft="20dp"
      android:textColor="@android:color/holo_red_dark"
      android:layout_alignParentBottom="true"
      android:layout_marginBottom="50dp"
      android:background="@drawable/bg_special_disease_circle"
      android:text="删除"
      />
  </RelativeLayout>
</LinearLayout>