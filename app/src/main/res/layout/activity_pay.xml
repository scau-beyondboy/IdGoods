<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        >
        <ImageView
          android:id="@+id/pay_back"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_centerInParent="true"
          android:layout_marginLeft="15dp"
          android:paddingLeft="5dp"
          android:paddingRight="5dp"
          android:src="@drawable/ic_navigate_black_24dp" />
        <Button
          android:id="@+id/pay_cancel"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="取消"
          android:textSize="20dp"
          android:layout_alignParentRight="true"
          android:background="@drawable/buttonselector"/>
    </RelativeLayout>

    <TextView
      android:layout_width="wrap_content"
      android:layout_marginTop="15dp"
      android:layout_height="wrap_content"
      android:text="请选择支付方式"
      android:layout_gravity="center_horizontal"
      android:textSize="20dp"/>
  <RadioGroup
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    >
      <RadioButton
        android:id="@+id/alipay"
        android:layout_marginTop="30dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="支付宝"
        android:textSize="25dp"
        android:button="@null"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/payway_textcolor"
        android:background="@drawable/buttonblackselector"
         />
      <RadioButton
        android:id="@+id/wechatpay"
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:text="微信"
        android:button="@null"
        android:textSize="25dp"
        android:textColor="@color/payway_textcolor"
        android:background="@drawable/buttonblackselector"
        />
  </RadioGroup>
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    >
    <EditText
      android:id="@+id/account1"
      android:layout_marginTop="50dp"
      android:drawableLeft="@drawable/logininvitedcodex"
      android:layout_centerHorizontal="true"
      android:hint="请输入收款账号"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"/>
    <EditText
      android:id="@+id/account2"
      android:layout_centerHorizontal="true"
      android:layout_below="@id/account1"
      android:layout_marginTop="10dp"
      android:drawableLeft="@drawable/logininvitedcodex"
      android:hint="请再次输入收款账户"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"/>
    <Button
      android:id="@+id/nextstep"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:clickable="true"
      android:padding="10dp"
      android:gravity="center"
      android:textSize="25sp"
      android:textColor="@android:color/white"
      android:background="@android:color/black"
      android:layout_alignParentBottom="true"
      android:text="下一步"
    />
  </RelativeLayout>
</LinearLayout>
