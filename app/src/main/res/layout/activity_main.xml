<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/drawer_layout"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fitsSystemWindows="true"
  tools:context=".MainActivity">
    <LinearLayout
      android:layout_width="match_parent"
      android:clickable="true"
      android:background="@android:color/white"
      android:layout_height="match_parent"
      android:orientation="vertical">
      <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        >
        <ImageView
          android:id="@+id/menu_toggle"
          android:layout_marginLeft="10dp"
          android:layout_width="wrap_content"
          android:layout_height="?attr/actionBarSize"
          android:src="@drawable/ic_menu_black_24dp"
          />
        <android.support.v7.widget.SearchView
          android:id="@+id/menu_search"
          android:layout_centerVertical="true"
          android:layout_alignParentRight="true"
          android:searchIcon="@drawable/ic_search_black_24dp"
          android:visibility="gone"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          />
      </RelativeLayout>
      <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <fragment
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:name="com.scau.beyondboy.idgoods.fragment.FragmentHome"/>
      </FrameLayout>
    </LinearLayout>
  <LinearLayout
      android:layout_width="280dp"
      android:layout_gravity="start"
      android:layout_height="match_parent"
      android:background="@color/gray"
      android:orientation="vertical">
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        >
        <ImageView
          android:id="@+id/header_image"
          android:background="@drawable/header_image"
          android:layout_width="70dp"
          android:layout_height="70dp"
          android:layout_centerInParent="true"
          />
        <TextView
          android:id="@+id/user_name"
          android:textColor="@color/white"
          android:layout_below="@id/header_image"
          android:layout_centerInParent="true"
          android:padding="10dp"
          android:text="beyondboy"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          />
      </RelativeLayout>
      <RelativeLayout
        android:id="@+id/home"
        android:clickable="true"
        android:background="@drawable/drawer_left_menu_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
          android:drawableLeft="@drawable/ic_home_black_24dp"
          android:text="首页"
          style="@style/draw_left_menu_textview"
          />
        <include layout="@layout/draw_left_menu_imageview"/>
      </RelativeLayout>
      <include layout="@layout/draw_left_menu_devider"/>
      <RelativeLayout
        android:id="@+id/myproduct"
        android:clickable="true"
        android:background="@drawable/drawer_left_menu_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
          android:drawableLeft="@drawable/ic_product_black_24dp"
          android:text="我的产品"
          style="@style/draw_left_menu_textview"
          />
        <include layout="@layout/draw_left_menu_imageview"/>
      </RelativeLayout>
      <include layout="@layout/draw_left_menu_devider"/>
    <RelativeLayout
      android:id="@+id/mycollect"
      android:clickable="true"
      android:background="@drawable/drawer_left_menu_selector"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      >
      <TextView
        android:drawableLeft="@drawable/ic_collect_black_24dp"
        android:text="我的收藏"
        style="@style/draw_left_menu_textview"
        />
      <include layout="@layout/draw_left_menu_imageview"/>
    </RelativeLayout>
    <include layout="@layout/draw_left_menu_devider"/>
      <RelativeLayout
        android:id="@+id/setting"
        android:clickable="true"
        android:background="@drawable/drawer_left_menu_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
          android:drawableLeft="@drawable/ic_setting_high_black_24dp"
          android:text="设置"
          style="@style/draw_left_menu_textview"
          />
        <include layout="@layout/draw_left_menu_imageview"/>
      </RelativeLayout>
      <include layout="@layout/draw_left_menu_devider"/>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
