<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  >
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    >
    <ImageView
      android:id="@+id/product_detail_back"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginLeft="15dp"
      android:paddingLeft="5dp"
      android:paddingRight="5dp"
      android:src="@drawable/ic_navigate_black_24dp"
      />
  </RelativeLayout>
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
      <ImageView
        android:id="@+id/header_image"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:layout_height="170dp"
        android:scaleType="fitXY"
        android:src="@drawable/header_image"
        />
      <TextView
        android:id="@+id/product_name"
        android:layout_below="@id/header_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:paddingTop="5dp"
        android:textSize="20sp"
        android:text="beyondboy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
      <TextView
        android:id="@+id/adverse_serialnumber"
        android:layout_below="@id/product_name"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:paddingTop="5dp"
        android:textSize="20sp"
        android:text="12345678898"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
      <TextView
        android:id="@+id/discount"
        android:layout_below="@id/adverse_serialnumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:paddingTop="5dp"
        android:textSize="20sp"
        android:text="优惠90元"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
      <TextView
        android:id="@+id/date"
        android:layout_below="@id/discount"
        android:layout_centerHorizontal="true"
        android:paddingTop="5dp"
        android:textSize="20sp"
        android:text="2015/03/03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
  </RelativeLayout>
</LinearLayout>