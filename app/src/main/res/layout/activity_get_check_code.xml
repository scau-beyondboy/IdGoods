<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
   >
 <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="注册"
         android:textSize="25dp"
         android:layout_centerInParent="true"
         android:id="@+id/textView" />
     <ImageButton
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:src="@drawable/ic_ab_back_holo_light_am"
         android:background="@drawable/buttonbackselector"/>
 </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
         android:id="@+id/btn_getCheckCode"
        android:text="获取验证码"
        android:background="@drawable/buttonselector"/>

    <EditText
        android:layout_above="@+id/btn_getCheckCode"
        android:layout_centerInParent="true"
        android:hint="请输入手机号码"
        android:id="@+id/et_phone"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/loginuserx"
        android:inputType="phone" />
    <EditText
        android:id="@+id/et_checkcode"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_getCheckCode"
        android:layout_centerInParent="true"
        android:drawableLeft="@drawable/loginuserx"
        android:hint="请输入验证码"/>
    <Button
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认"
        android:layout_below="@+id/et_checkcode"
        android:layout_centerInParent="true"
        android:background="@drawable/buttonselector"
        android:id="@+id/confirm"/>



</RelativeLayout>
